pipeline {
    agent {
        // Use Docker tool configured in Jenkins
        docker {
            // Specify the Docker image to use
            image 'docker'
            label 'docker'
        }
    }
    
    environment {
        DOCKER_IMAGE_NAME = 'gaurav123shub/calculator-app:latest'
        DOCKERHUB_CREDENTIALS = 'dockerhub_credentials'
    }

    stages {
        stage('Check Docker Version') {
            steps {
                script {
                    // Run 'docker --version' command to check Docker version
                    sh 'docker --version'
                }
            }
        }
        
        stage('Checkout Source') {
            steps {
                script {
                    // Checkout the code from the repository using the 'main' branch
                    git branch: 'main', url: 'https://github.com/Gauravkr2024/Calculator-app.git'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                // Build the Docker image
                script {
                    docker.build(DOCKER_IMAGE_NAME)
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                // Push the Docker image to DockerHub
                script {
                    docker.withRegistry('https://registry.hub.docker.com', DOCKERHUB_CREDENTIALS) {
                        docker.image(DOCKER_IMAGE_NAME).push()
                    }
                }
            }
        }

        stage('Run Docker Container') {
            steps {
                // Run the Docker container
                script {
                    docker.image(DOCKER_IMAGE_NAME).run('-d -p 8000:8000 --name calculator-app')
                }
            }
        }

        stage('Provide Access URL') {
            steps {
                echo 'Access the application at http://localhost:8000'
            }
        }
    }

    post {
        always {
            // Clean up resources if needed
            script {
                docker.image(DOCKER_IMAGE_NAME).stop()
                docker.image(DOCKER_IMAGE_NAME).remove()
            }
        }
    }
}
